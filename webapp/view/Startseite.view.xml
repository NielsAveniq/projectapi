<mvc:View
    controllerName="projectapi.controller.Startseite"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:f="sap.ui.layout.form">

    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <smartForm:SmartForm id="smartForm"
                            app:defaultCheckBoxDisplayBehaviour="OnOff"
                            app:defaultDropDownDisplayBehaviour="idAndDescription"
                            editTogglable="true" editToggled="handleEditToggled" title="{Name}">
                            <smartForm:Group label="Addresse">
                                <smartForm:GroupElement label="Stadt">
                                    <smartField:SmartField value="{City}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement label="PLZ">
                                    <smartField:SmartField value="{PostalCode}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement label="Strasse">
                                    <smartField:SmartField value="{Street}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement label="NR">
                                    <smartField:SmartField value="{HouseNo}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement label="Land(Kurz)">
                                    <smartField:SmartField value="{CountryID}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement label="Land">
                                    <smartField:SmartField value="{CountryName}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement label="Zeitzone">
                                    <smartField:SmartField value="{TimeZone}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement label="Sprache">
                                    <smartField:SmartField value="{LanguageID}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement label="Zusammenfassung">
                                    <smartField:SmartField value="{ShortForm}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement label="AccountID">
                                    <smartField:SmartField value="{AccountID}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement label="AddressID">
                                    <smartField:SmartField value="{AddressID}" />
                                </smartForm:GroupElement>
                            </smartForm:Group>
		                </smartForm:SmartForm>
                        
                        <Table
                            id="table"
                            width="auto"
                            items="{
                                path: '/Countries',
                                sorter: {
                                    path: 'CountryID',
                                    descending: false
                                }
                            }"
                            noDataText="{worklistView>/tableNoDataText}"
                            busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                            growing="true"
                            growingScrollToLoad="true"
                            updateFinished=".onUpdateFinished">

                            <headerToolbar>
                                <OverflowToolbar id="tollbar">
                                    <Title
                                        id="tableHeader"
                                        text="{worklistView>/worklistTableTitle}"
                                        level="H3"/>
                                    <ToolbarSpacer id="spacer"/>
                                    <SearchField
                                        id="searchField"
                                        tooltip="{i18n>worklistSearchTooltip}"
                                        search=".onSearch">
                                        <layoutData>
                                            <OverflowToolbarLayoutData id="data"
                                                maxWidth="200px"
                                                priority="NeverOverflow"/>
                                        </layoutData>
                                    </SearchField>
                                    <Button id="addButton" icon="sap-icon://add" press="onAdd" />
                                </OverflowToolbar>
                            </headerToolbar>

                            <columns>
                                <Column id="nameColumn">
                                    <Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
                                </Column>
                                <Column id="landColumn" hAlign="End">
                                    <Text text="Land" id="landColumnTitle"/>
                                </Column>
                            </columns>

                            <items>
                                <ColumnListItem id="listitem"
                                    type="Navigation"
                                    press=".onPress">
                                    <cells>
                                        <ObjectIdentifier id="id"
                                            title="{CountryID}"/>
                                        <Text id="txt" text="{Name}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
