<mvc:View
    controllerName="projectapi.controller.Startseite"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:f="sap.ui.layout.form">

    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <smartForm:SmartForm id="smartForm"
                            app:defaultCheckBoxDisplayBehaviour="OnOff"
                            app:defaultDropDownDisplayBehaviour="idAndDescription"
                            editTogglable="true" editToggled="handleEditToggled" title="{i18n>NameDaten}">
                            <smartForm:Group id="KundeGroup" label="{i18n>DatenGr}">
                                <smartForm:GroupElement id="GrElName" label="{i18n>FirstName}">
                                    <smartField:SmartField id="SFName" value="{FirstName}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement id="GrElLastName" label="{i18n>LastName}">
                                    <smartField:SmartField id="SFLastName" value="{LastName}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement id="GrElTel" label="{i18n>Tel}">
                                    <smartField:SmartField id="SFTel" value="{CompletePhoneNo}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement id="GrElMail" label="{i18n>Mail}">
                                    <smartField:SmartField id="SFMail" value="{Email}" />
                                </smartForm:GroupElement>
                            </smartForm:Group>
                            <smartForm:Group id="AddresseGroup" label="{i18n>AddresseGr}">
                                <smartForm:GroupElement id="GrElStadt" label="{i18n>Stadt}">
                                    <smartField:SmartField id="SFStadt" value="{AddressInfo/City}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement id="GrElPLZ" label="{i18n>PLZ}">
                                    <smartField:SmartField id="SFPLZ" value="{AddressInfo/PostalCode}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement id="GrElStrasse" label="{i18n>Strasse}">
                                    <smartField:SmartField id="SFStrasse" value="{AddressInfo/Street}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement id="GrElNr" label="{i18n>Nr}">
                                    <smartField:SmartField id="SFNr" value="{AddressInfo/HouseNo}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement id="GrElLandID" label="{i18n>LandID}">
                                    <smartField:SmartField id="SFLandID" value="{AddressInfo/CountryID}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement id="GrElLand" label="{i18n>Land}">
                                    <smartField:SmartField id="SFLand" value="{AddressInfo/CountryName}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement id="GrElZz" label="{i18n>Zeitzone}">
                                    <smartField:SmartField id="SFzz" value="{AddressInfo/TimeZone}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement id="GrElSprache" label="{i18n>Sprache}">
                                    <smartField:SmartField id="SFSprache" value="{AddressInfo/LanguageID}" />
                                </smartForm:GroupElement>
                                <smartForm:GroupElement id="GrElKf" label="{i18n>Kurzform}">
                                    <smartField:SmartField id="SFKf" value="{AddressInfo/ShortForm}" />
                                </smartForm:GroupElement>
                            </smartForm:Group>
		                </smartForm:SmartForm>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
